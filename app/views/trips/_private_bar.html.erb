<div class="row">
	<div class="trip-private-bar">
		<div class="row">
			<div class="col-md-6" style="padding-top:15px;padding-left:80px;">
				<div class="user-with-box">
					<%= link_to @trip.user, class: "no-decoration" do %>
						<%= user_image(@trip.user) %>
					<% end %>
					<div class="no-height hide">
