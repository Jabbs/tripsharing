<div class="row">
	<div class="col-md-3"><label>Seeking:</label></div>
	<div class="col-md-9">
		<%= f.select :group_dynamics, Trip::GROUP_DYNAMICS_ARRAY,{}, {style: "width: 310px;"} %>
	</div>
</div>
<div class="row top-margin">
	<div class="col-md-3"><label>How many?:</label></div>
	<div class="col-md-9">
		<%= f.select :group_count, Trip::GROUP_COUNT_ARRAY %>
	</div>
</div>

<div class="row top-margin">
	<div class="col-md-3"><label>Ages:</label></div>
	<div class="col-md-9">
		<%= f.select :group_age_min, (18..99), {prompt: "--min--"} %>
		<span style="position:relative;top:-13px;">-- to --</span>
	  <%= f.select :group_age_max, (18..99), {prompt: "--max--"} %>
	</div>
</div>

<div class="row top-margin">
	<div class="col-md-3"><label>Nationality:</label></div>
	<div class="col-md-9">
		<select name="trip[group_nationality]" style="width:310px;">
			<% User::NATIONALITIES_ARRAY.each do |nationality| %>
				<% @trip.group_nationality == nationality[1] ? selected = "selected" : selected = "" %>
				<option value="<%= nationality[1] %>" <%= selected %>><%= nationality[0] %></option>
			<% end %>
		</select>
	</div>
</div>
