<% if @trip %>
	<% trip.id == @trip.id ? list_item_class = "active" : list_item_class = "" %>
<% end %>
<li class="sidebar_list_item <%= list_item_class %>">
	<div class="row">
		<div class="col-md-12">
			<h3>
				<%= link_to trip.name, trip %>
				<% if trip.incomplete? %>
					<em class="red" style="font-size:80%;">imcomplete</em>
				<% end %>
			</h3>
		</div>
	</div>
</li>