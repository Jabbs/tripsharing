<% if current_user && current_user == @trip.user && @trip.active? %>
	<div class="no-height">
		<a href="#" type="button" class="grey-link bigger" style="font-family:inherit;" data-toggle="modal" data-target="#tripImageModal">
			<span class="fa-stack" title="Edit images">
			  <i class="fa fa-square-o fa-stack-2x"></i>
			  <i id="trip-image-modal" class="fa fa-camera fa-stack-1x" style="font-size:80%; position:relative; top:-3px;"></i>
			</span>
		</a>
	</div>
<% end %>
<div>
	<%= image_tag trip_image_path(@trip), class: "img-responsive trip-pic", title: "cover photo" %>
</div>

<h1><%= @trip.name %></h1>