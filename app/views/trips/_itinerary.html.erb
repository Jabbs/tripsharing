<div class="row">
	<div class="col-md-12">
		<div class="center">
			<h3>Itinerary</h3>
		</div>
	</div>
</div>
<% if @stops.size == 0 %>
	<div class="row">
		<div class="col-md-12">
			<div class="dots-white" style="padding-top:10px;padding-bottom:10px;margin-top:10px;">
				<i class="fa fa-map-marker right-margin" style="margin-left:3px;"></i>
				No stops have been added.
				<span class="pull-right">
					tbd
					<i class='fa fa-calendar' style="margin-left:3px;"></i>
				</span>
			</div>
		</div>
	</div>
<% end %>
<div id="stops">
	<%= render @stops %>
</div>
<% if current_user && current_user == @trip.user && @trip.active? %>
	<div class="row">
		<div class="col-md-12">
			<div id="stop-form" style="display:none;"><%= render "stops/form" %></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="center">
				<%= link_to new_trip_stop_path(@trip), remote: true, class: "grey-link" do %>
					<i class="fa fa-plus-circle" id="new-stop" style="font-size:300%; margin-top:10px;"></i>
				<% end %>
				<a href="#" class="grey-link">
					<i class="fa fa-minus-circle" id="cancel-stop" style="font-size:300%; margin-top:10px;display:none;"></i>
				</a>
			</div>
		</div>
	</div>
<% end %>