<%= render "trips/trip_edit_modal" %>
<div class="container-fluid">
	<div class="show-trip">
		<div class="row">
			<div class="col-md-8">
				
				<div class="row">
					<div class="col-md-12">
						<div class="center">
							<h1><%= @trip.name %></h1>
						</div>
					</div>
				</div>
				
				<div class="row">
					<div class="col-md-12">
						<div class="center">
							<% if @trip.user.fb_image %>
		            <%= image_tag @trip.user.fb_image, class: "image" %>
		          <% else %>
		            <%= image_tag "blank_avatar.jpg", class: "image" %>
		          <% end %>

							<%= @trip.user.first_name %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-10 col-md-offset-1"><hr></div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="center">
							<% if current_user && current_user == @trip.user %>
								<button type="button" class="btn btn-default" data-toggle="modal" data-target="#tripEditModal" data-backdrop="static">
								 EDIT TRIP
								</button>
							<% end %>
						</div>
					</div>
				</div>
				
			</div>
			<div class="col-md-4">
				<% unless @trip.solo_trip? %>
					<h3>Group dynamics:</h3>

						<p class="no-bottom-margin">
							<%= gender_nationality_text(@trip.group_dynamics, @trip.group_nationality).html_safe %> 
							ages <span class="dots"><%= @trip.group_age_min %></span> to <span class="dots"><%= @trip.group_age_max %></span>.
						</p>

				<% end %>
				<% if @trip.public? %>
					<%= render "trips/social_media" %>
				<% end %>
				<h3>Comments</h3>
				<div class="comment"><%= @trip.reason %></div>
			</div>
		</div>
	</div>
</div>