<%= form_for @trip do |f| %>
	<%= f.text_area :description, placeholder: "Description...", rows: 4, autocomplete: :off, style: "padding-left:3px;border-color: #DBDBDB; width:100%;margin-bottom:20px;", id: "trip_edit_description" %>
  <%= f.submit "Save", data: { disable_with: "Saving..." }, class: "btn btn-salmon" %>
	<%= link_to "Cancel", "#", id: "cancel-description" %>
<% end %>