<div class="row bottom-margin">
	<div class="col-md-3 col-md-offset-1">
		<%= link_to @trip.user do %>
			<%= user_image(@trip.user) %>
		<% end %>
	</div>
	<div class="col-md-8" style="padding-top:5px;">
		<div class="smaller-bottom-margin">
			<%= @trip.user.full_name %>
		</div>
		<div class="smaller-bottom-margin">
			<%= @trip.user.age %>, <%= @trip.user.gender.capitalize %>
		</div>
	</div>
</div>
