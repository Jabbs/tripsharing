<%= form_for @trip, multipart: true do |f| %>
	<%= f.hidden_field :name, value: @trip.name %>
	<%= f.fields_for :image_attachments do |builder| %>
		<% if builder.object.new_record? %>
			<%= builder.file_field :image, style: "margin-left: 0px;" %>
		<% end %>
	<% end %>
	<br>
	<em>1200x300px for optimal size.</em>
	<br>
	<br>
  <%= f.button "Add Image", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..." }, class: "btn btn-danger" %>

<% end %>