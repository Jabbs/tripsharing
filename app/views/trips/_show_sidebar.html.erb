
<% if @trip.reason? %>
	<hr style="margin-top:50px;margin-bottom:50px;">
	<div class="comment">
		"<%= @trip.reason %>"
		<br>-- Trip Organizer
		<span class="pull-right"><%= time_ago_in_words(@trip.created_at) %> ago.</span>
	</div>
<% end %>

<% if @trip.public? %>
	<hr style="margin-top:50px;margin-bottom:50px;">
	<div class="center" style="margin-top:30px;margin-bottom:0px;"><%= render "trips/social_media" %></div>
<% end %>