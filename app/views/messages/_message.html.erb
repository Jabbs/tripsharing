<div class="row small-bottom-margin">
	<div class="col-md-1 col-sm-2">
		<% if type == "sent" %>
			<%= link_to message.receiver do %>
				<%= user_image(message.receiver) %>
			<% end %>
		<% else %>
			<%= link_to message.sender do %>
				<%= user_image(message.sender) %>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-11 col-sm-10" style="margin-top:12px;">
		<div class="row">
			<div class="col-md-6">
				<%= link_to [current_user, message], class: "grey-dark-link" do %>
					<%= truncate(message.content, length: 110) %>
				<% end %>
			</div>
			<div class="col-md-4">
				<span class="pull-right"><em><%= time_ago_in_words(message.created_at) %> ago</em></span>
			</div>
			<div class="col-md-2">
				<%= link_to "VIEW", [current_user, message], class: "grey-dark-link btn btn-default btn-sm pull-right" %>
			</div>
		</div>
	</div>
</div>
<hr style="margin-top:8px;margin-bottom:8px;">