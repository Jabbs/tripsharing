<% if trip.join_requests.where(user_id: current_user.id).size != 0 %>
	<%= link_to "<i class='fa fa-check'></i> SENT".html_safe, "#", title: "Join request has been sent", class: "btn btn-default #{btn_size}", disabled: true %>
<% else %>
	<a href="" data-toggle="modal" data-target="#tripJoinReqModal<%= trip.id %>" class="btn btn-default <%= btn_size %>" href="#" role="button"><i class='fa fa-comment-o'></i> <%= join_text %></a>
<% end %>