<table border="0" cellpadding="0" cellspacing="0" width="100%">
	<tr>
	  <td>
	    <b>You have received a new message from <%= @message.sender.full_name %>:</b>
	  </td>
	</tr>
	<tr>
	  <td class="small" style="padding-top:20px; padding-bottom:20px; padding-left: 20px; padding-right: 20px;">
	    <%= simple_format(truncate(@message.content, length: 300)) %>
	  </td>
	</tr>
	<tr>
	  <td style="padding-top:0px; padding-bottom:20px;">
	    <%= link_to "View Message", user_message_url(user_id: @message.receiver.id, id: @message.id) %>
	  </td>
	</tr>
</table>