<table border="0" cellpadding="0" cellspacing="0" width="100%">
	<tr>
	  <td>
	    <b>You have received a request to join your trip: <%= @join_request.trip.name %>.</b>
	  </td>
	</tr>
	<tr>
	  <td style="padding-top:20px; padding-bottom:20px;">
	    "<%= truncate(@join_request.content, length: 300) %>"
	  </td>
	</tr>
	<tr>
	  <td style="padding-top:0px; padding-bottom:20px;">
	    <%= link_to "View Request", user_join_requests_url(user_id: @join_request.trip.user.id) %>
	  </td>
	</tr>
</table>