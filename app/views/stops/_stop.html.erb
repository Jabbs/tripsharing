<div id="<%= stop.id %>-stop">

	<div class="row">
		<div class="col-md-12">
			<div class="dots-white" style="padding-top:10px;padding-bottom:10px;">
				<% if stop.to_name.present? && stop.to_iata.present? %>
					<i class="fa fa-plane"></i>
					<span class="airport"><%= stop.to_iata[0] %></span><span class="airport"><%= stop.to_iata[1] %></span><span class="airport"><%= stop.to_iata[2] %></span>
					<%= stop.to_name %>
				<% else %>
					<i class="fa fa-map-marker"></i>
					<%= stop.to_name %>
				<% end %>
				<%= link_to [@trip, stop], remote: true, method: :delete, class: "grey-link" do %>
				  <i class='fa fa-trash'></i>
				<% end %>
				<span class="pull-right">
					<% if stop.to_date.present? %>
						<%= stop.to_date.strftime('%m/%d/%Y') %>
					<% else %>
						tbd
					<% end %>
					<i class='fa fa-calendar'></i>
				</span>
			</div>
		</div>
	</div>
</div>
