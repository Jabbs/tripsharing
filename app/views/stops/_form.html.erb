<div class="dots-white top-margin" style="padding-top:10px;padding-bottom:10px;">
	<%= form_for [@trip, @stop], remote: true do |f| %>
	
		<i class="fa fa-map-marker"></i>
	
		<input name="stop[to_name_dest]" id="stop_to_name_dest" type="text" class="add-geocomplete" placeholder="Destination" style="width:240px;" autocomplete="off" autofocus>
		
		<span style="margin-left:5px;margin-right:7px;">--or--</span>
		<i class="fa fa-plane"></i>
		<div class="prefetch inline no-margin" style="position:relative;top:-3px;">
			<input class="typeahead" type="text" id="stop_from_name" name="stop[from_name]" placeholder="Departure airport" style="width:220px;" autocomplete="off">
		  <input class="typeahead" type="text" id="stop_to_name" name="stop[to_name]" placeholder="Arrival airport" style="width:220px;" autocomplete="off">
		</div>
		<span class="pull-right">
			<i class="fa fa-calendar"></i>
			<input class="datepicker" id="stop_to_date" placeholder="mm/dd/yyyy" name="stop[to_date]" data-date-format="mm/dd/yyyy" style="width:90px;">
			<%= f.submit "+", class: "btn btn-default", style: "position:relative; top:-2px;" %>
		</span>
	<% end %>
</div>
