<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			  <h4 class="modal-title">Change Password</h4>
			</div>
			<div class="modal-body">
				<%= form_for @user, html: { id: "edit_user_password_form"} do |f| %>
				  <div class="row small-bottom-margin">
						<div class="col-md-3">
							<label class="pull-right">Password:</label>
						</div>
						<div class="col-md-6">
							<input autocomplete="off" id="user_password" name="user[password]" style="width:100%;" type="password" placeholder="Password" required minlength="6">
						</div>
					</div>
					<div class="row">
						<div class="col-md-3">
							<label class="pull-right">Password Confirm:</label>
						</div>
						<div class="col-md-6">
							<input autocomplete="off" id="user_password_confirmation" name="user[password_confirmation]" style="width:100%;" type="password" placeholder="Password Confirm" required minlength="6" data-parsley-equalto="#user_password">
						</div>
					</div>
					<hr>
					<%= f.submit "Submit", data: { disable_with: "Saving..." }, class: "btn btn-danger" %>
				<% end %>
			</div>
    </div>
  </div>
</div>
