<div class="container" style="margin-bottom:60px;">
	<div class="row top-margin">
		<div class="col-md-12">
			V1.0 - 4/15/15
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-user"></i>
				<%= @user_count %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-plane"></i>
				<%= @trip_count %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-group"></i>
				<%= @join_request_count %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-comment"></i>
				<%= @message_count %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">Last 7 days</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-user"></i>
				<%= @user_count_in_7_days %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-plane"></i>
				<%= @trip_count_in_7_days  %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-group"></i>
				<%= @join_request_count_in_7_days  %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="well huge">
				<i class="fa fa-comment"></i>
				<%= @message_count_in_7_days %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<table>
					<thead>
						<th>Image</th>
						<th>ID</th>
						<th>Created</th>
						<th>Last On</th>
						<th>Location</th>
						<th>Contact</th>
						<th>Bio?</th>
						<th>FB?</th>
						<th>Ver?</th>
						<th>Airport?</th>
						<th>Edu?</th>
						<th>C/L/I</th>
						<th>Email</th>
						<th>Followings</th>
						<th>Regions</th>
						<th>Trips</th>
						<th></th>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= link_to user_image(user), user %></td>
								<td><%= user.id %></td>
								<td><%= user.created_at.strftime("%-m/%e %l:%M%P") %></td>
								<td><%= user.last_sign_in_at.strftime("%-m/%e %l:%M%P") if user.last_sign_in_at %></td>
								<td><%= user.location %></td>
								<td>
									<%= link_to "#{user.full_name}", user %>
									<br>
									<%= user.email %>
									<br>
									<%= user.age %>, <%= user.gender.capitalize %>
									<% if user.nationality %>
										 (<%= User::NATIONALITIES[user.nationality] %>)
									<% end %>
								</td>
								<td><%= user.bio.length if user.bio? %></td>
								<td><%= user.uid.present? ? link_to("Y", user.fb_url, target: "_blank") : "N" %></td>
								<td><%= user.verified? ? "T" : "F" %></td>
								<td><%= user.home_airport.present? ? "T" : "F" %></td>
								<td><%= user.education.present? ? "T" : "F" %></td>
								<td><%= user.country_blob.split(",").size %>/<%= user.language_blob.split(",").size %>/<%= user.interest_blob.split(",").size %></td>
								<td><%= user.email_blob.split(",").size %></td>
								<td><%= user.followings_count %></td>
								<td><%= user.region_blob.split(",").size %></td>
								<td><%= user.trips.size %></td>
								<td>
									<a href="#" data-toggle="modal" data-target="#newMessageModal<%= user.id %>" class="btn btn-default btn-sm pull-right"><i class='fa fa-comment'></i></a>
									<%= render "messages/modals/admin_message_modal", user: user %>
								</td>
							</tr>
						<% end %>
						<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
