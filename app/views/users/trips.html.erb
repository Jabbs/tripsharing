<div class="container" style="margin-bottom:60px;">
	<div class="row top-margin">
		<div class="col-md-3">
			<div style="margin-bottom:5px;">
				<%= link_to @user do %>
					<% if @user.fb_image.present? %>
						<%= image_tag "#{@user.fb_image}" + "?type=large", class: "profile-pic", title: @user.full_name %>
					<% else %>
						<%= image_tag "blank_avatar.png", class: "profile-pic", title: @user.full_name %>
					<% end %>
				<% end %>
			</div>
			<ul class="list-unstyled">
				<li><strong><%= link_to "About", @user, class: "grey-dark-link" %></strong></li>
				<li><strong><%= link_to "Trips", user_trips_path(@user), class: "grey-dark-link" %></strong></li>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-12">
					<h3 class="no-top-margin">
						<%= link_to "Incomplete", "#", class: "grey-dark-link" %> /
						<%= link_to "Accepting Travel Companions", "#" %> /
						<%= link_to "In Progress", "#", class: "grey-dark-link" %> / 
						<%= link_to "Complete", "#", class: "grey-dark-link" %>
					</h3>
				</div>
			</div>
			<div class="row">
				<% unless @my_trips.any? %>
					<em style="margin-left:10px;">none</em>
				<% end %>
				<% @my_trips.each do |trip| %>
					<%= render "trips/well", trip: trip %>
				<% end %>
			</div>
		</div>
	</div>
</div>

