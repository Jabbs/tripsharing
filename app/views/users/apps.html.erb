<div class="container" style="margin-bottom:60px;">
	<div class="row top-margin">
		<div class="col-md-3">
			<%= render "users/sidebar_edit", user: @user %>
		</div>
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">Apps</h3>
					  </div>
					  <div class="panel-body">
							<% if @user.oauth_token %>
								<a href="#" id="sign_in" class="btn btn-facebook" style="margin-bottom:10px; padding-left:20px;padding-right:20px;" disabled>
									<i class='fa fa-check' style="padding-right:4px;"></i> Facebook Connected
								</a>
							<% else %>
								<a href="/auth/facebook" id="sign_in" class="btn btn-facebook" style="margin-bottom:10px; padding-left:20px;padding-right:20px;">
									<i class='fa fa-facebook' style="padding-right:4px;"></i> Connect Facebook
								</a>
							<% end %>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
