<div class="container" style="margin-bottom:60px;">
	<div class="row top-margin">
		<div class="col-md-3">
			<%= render "users/sidebar_edit", user: @user %>
		</div>
		<%= form_for @user do |f| %>
			<%= f.hidden_field :first_name %>
			<div class="col-md-9">
				<div class="row">
					<div class="col-md-12">
						<div class="panel panel-default">
						  <div class="panel-heading">
						    <h3 class="panel-title">Email Settings</h3>
						  </div>
						  <div class="panel-body">
							
								<div class="row">
									<div class="col-md-12">
										<div class="checkbox">
									    <label>
									      <input type="checkbox" name="user[newsletter]" checked="<%= @user.newsletter %>"> Weekly Newsletter
									    </label>
										</div>
									</div>
								</div>
								
							</div>

						</div>
					</div>
				</div>
				


				<div class="row">
					<div class="col-md-12">
						<%= f.submit "Save", data: { disable_with: "Saving..." }, class: "btn btn-danger pull-right" %>
						<%= link_to "Cancel", @user, class: "btn btn-default pull-right", style: "margin-right:10px;" %>
					</div>
				</div>
				
			</div>
		<% end %>
	</div>
</div>
