<header>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to image_tag("globe-icon-planes-30.png"), root_url, style: "position:relative; top:10px;", id: "globe" %>
	      <%= link_to "TripSharing".html_safe, root_url, id: "logo" %>
	    </div>
			<% unless @remove_start_trip_button %>
				<a href="" data-toggle="modal" data-target="#tripNewModal" class="btn btn-info pull-left" style="margin-top:8px;margin-left:30px;" href="#" role="button"><i class="fa fa-plane" style="margin-right:5px;"></i> Start A Trip</a>
				<%= render "trips/trip_new_modal" %>
			<% end %>
			
			<a href="/trips" class="btn btn-default pull-left" style="margin-top:8px;margin-left:10px; border-color:white;" href="#" role="button"><i class="fa fa-list" style="margin-right:5px;"></i> Browse Trips</a>
	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav navbar-right">
	        <% if current_user %>
	          <ul class="nav pull-right visible-desktop">
	            <li class="dropdown">
	              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
	                <% if current_user.fb_image %>
	                  <%= image_tag current_user.fb_image, size: "30x30", id: "image-dropdown" %>
	                <% else %>
	                  <%= image_tag "blank_avatar.jpg", size: "30x30", id: "image-dropdown" %>
	                <% end %>
	                <b class="caret"></b>
	              </a>
	              <ul class="dropdown-menu">
								<%= render 'layouts/header_nav_list' %>
	              </ul>
	            </li>
	          </ul>
	        <% end %>
	      </ul>
				<!--
				<% if current_user %>
					<ul class="nav navbar-nav navbar-right hidden-phone">
						<%= render 'layouts/header_nav_list' %>
	        </ul>
				<% end %>
				-->
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
	
</header>
