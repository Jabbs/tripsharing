<header>
  <div class="navbar navbar-inverse navbar-top">
    <div class="navbar-inner">
      <div class="container">
        <button class="btn btn-navbar background-grey" data-target="#head-nav" data-toggle="collapse" style="background:grey;margin-top:10px;" type="button">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="pull-left">
          <div class="div" style="padding-top:10px; padding-right:20px;">
            <%= link_to image_tag("globe-icon-planes-30.png"), root_url, style: "margin-left:5px;", id: "globe" %>
            <%= link_to "TripSharing<span class='blue tiny'>beta</span>".html_safe, root_url, id: "logo" %>
          </div>
        </div>
        <div class="nav-collapse" id="head-nav">
          <ul class="nav pull-right">
            <% if current_user %>
              <ul class="nav pull-right visible-desktop">
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <% if current_user.fb_image %>
                      <%= image_tag current_user.fb_image, size: "30x30", id: "image-dropdown" %>
                    <% else %>
                      <%= image_tag "blank_avatar.jpg", size: "30x30", id: "image-dropdown" %>
                    <% end %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
										<%= render 'layouts/header_nav_list' %>
                  </ul>
                </li>
              </ul>
            <% end %>
          </ul>
					<% if current_user %>
						<ul class="nav pull-right hidden-desktop">
							<%= render 'layouts/header_nav_list' %>
	          </ul>
					<% end %>
        </div>
      </div>
    </div>
  </div>
</header>
