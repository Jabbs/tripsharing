- content_for :title do
  = t('application.root.title_with_tag_line', tag_line: "Update Password")
.container    
  .div{ style: "margin-top:150px;margin-bottom:260px;"}
    = form_for(@user, url: password_reset_path(params[:id])) do |f|
      .row
        .span12
          %h2.center Reset Password
      .row
        .span6.offset3
          %hr
      .row
        .span9.offset3
          .row
            .span3
              %label Password:
            .span6
              = f.password_field :password
          .row
            .span3
              %label Password Confirmation:
            .span6
              = f.password_field :password_confirmation
      .row
        .span6.offset3
          %hr
      .row
        .span12
          .center
            = f.submit 'Update Password', class: "btn", disable_with: 'Submitting...'