<section id='survey_form'>
	<br>
  <div class="row">
		<div class="col-md-12">
			<%= form_tag '/surveys', class: "form-inline lead-big", remote: true do %>
		    <div class="form-group">
					<select id="organizer_type" name="organizer_type">
					  <option value="1" selected>I'm</option>
		        <option value="2">We're</option>
		      </select>
		      <label for="country">traveling to </label>
		      <input type="text" class="add-geocomplete" name="destination" id="country" autofocus placeholder="a destination" style="width:520px;" required>
					<br>
		      and looking for
		      <select id="companion_type" name="companion_type">
					  <option value="1" selected>another travel companion</option>
		        <option value="2">2-5 travel companions</option>
		        <option value="3">6-10 travel companions</option>
		        <option value="4">another traveling couple</option>
		        <option value="5">2-5 traveling couples</option>
		        <option value="6">another traveling family</option>
		      </select>
		      to join in
		      <select id="month" name="month">
		        <option value="March 2015" selected>March</option>
		        <option value="April 2015">April</option>
		        <option value="May 2015">May</option>
		        <option value="June 2015">June</option>
		        <option value="July 2015">July</option>
		        <option value="August2015">August</option>
						<option value="September 2015">September</option>
						<option value="October 2015">October</option>
						<option value="November 2015">November</option>
						<option value="December 2015">December</option>
		      </select>
					.
		    </div>
				<br>
				<br>
				<br>
				<div class="blankey" style="display:none;">
			    <h4>Leave this field blank to prevent spam:</h4>
			    <%= text_field_tag :blankey %>
			    <br/>
			  </div>
		    <div class="pull-right"><button type="submit" class="btn btn-default btn-lg submit"> CONTINUE </button></div>
		   <% end %>
		</div>
  </div>
</section>