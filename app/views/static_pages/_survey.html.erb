<section id='survey_form'>
	<br>
  <div class="row">
		<div class="col-md-12">
			<%= form_tag '/surveys', class: "form-inline lead-big", remote: true do %>
		    <div class="form-group">
		      <label for="country">Take me to </label>
		      <input type="text" class="add-geocomplete" name="destination" id="country" autofocus placeholder="a destination" style="width:400px;" required>
		      with
		      <select id="companion_type" name="companion_type">
					  <option value="1" selected>another traveler</option>
		        <option value="2">2-5 travelers</option>
		        <option value="3">6-10 travelers</option>
		        <option value="4">another couple</option>
		        <option value="5">2-5 couples</option>
		        <option value="6">another family</option>
		      </select>

					<br>
		      in
		      <select id="month" name="month">
		        <option value="3/1/15" selected>March</option>
		        <option value="4/1/15">April</option>
		        <option value="5/1/15">May</option>
		        <option value="6/1/15">June</option>
		        <option value="7/1/15">July</option>
		        <option value="8/1/15">August</option>
						<option value="9/1/15">September</option>
						<option value="10/1/15">October</option>
						<option value="11">November</option>
						<option value="12">December</option>
		      </select>

		      <label for="hometown"> departing from </label>
					<input name="hometown" type="text" class="add-geocomplete" id="hometown" placeholder="my location" style="width:430px;" required>
					.
		    </div>
				<br>
				<br>
				<br>
				<div class="blankey" style="display:none;">
			    <h4>Leave this field blank to prevent spam:</h4>
			    <%= text_field_tag :blankey %>
			    <br/>
			  </div>
		    <div class="pull-right"><button type="submit" class="btn btn-default btn-lg submit"> CONTINUE </button></div>
		   <% end %>
		</div>
  </div>
</section>