<section id='survey_form'>
	<br>
  <div class="row">
		<div class="col-md-12">
			<%= form_tag '/surveys', class: "form-inline lead-big", remote: true do %>
		    <div class="form-group">
		      <label for="country">Take me to </label>
		      <input type="text" class="add-geocomplete" name="destination" id="country" autofocus placeholder="a destination" style="width:370px;" required>
		      with
					
		      <input type="number" name="companion_count" id="companion-number" placeholder="?" value="0" style="width:60px;">
		      travel companions
					<br>
		      <label for="month">in</label>
		      <select id="month" name="month">
		        <option value="3" selected>March</option>
		        <option value="4">April</option>
		        <option value="5">May</option>
		        <option value="6">June</option>
		        <option value="7">July</option>
		        <option value="8">August</option>
						<option value="9">September</option>
						<option value="10">October</option>
						<option value="11">November</option>
						<option value="12">December</option>
		      </select>

		      <label for="hometown"> departing from </label>
					<input name="hometown" type="text" class="add-geocomplete" id="hometown" placeholder="my location" style="width:430px;" required>
					.
		    </div>
				<br>
				<br>
				<br>
				<div class="blankey" style="display:none;">
			    <h4>Leave this field blank to prevent spam:</h4>
			    <%= text_field_tag :blankey %>
			    <br/>
			  </div>
		    <div class="pull-right"><button type="submit" class="btn btn-default btn-lg submit"> CONTINUE </button></div>
		   <% end %>
		</div>
  </div>
</section>