<section id='survey_form'>
	<div class="row">
		<div class="col-md-12">
			<label style="margin-left:10px;">PLAN YOUR FIRST TRIP:</label>
		</div>
	</div>
	<%= form_tag '/surveys', class: "form-inline lead-big", remote: true do %>
	  <div class="row">
			<div class="col-md-12">
		    <div class="form-group">
					<select id="organizer_type" name="organizer_type">
					  <option value="1" selected>I'm</option>
		        <option value="2">We're</option>
		      </select>
		      traveling to
					<select id="destination" name="destination">
						<% Trip::REGIONS_ARRAY.each do |region| %>
							<option value="<%= region[1] %>"><%= region[0] %></option>
						<% end %>
		      </select>
		      in
					<select id="month" name="month">
						<% Trip::DEPARTINGS_ARRAY.last(8).each do |departing| %>
		        	<option value="<%= departing[1] %>"><%= departing[0] %></option>
						<% end %>
		      </select>
					&amp; looking for
		      <select id="companion_type" name="companion_type">
						<% Trip::GROUP_DYNAMICS_ARRAY.each do |gd| %>
							<option value="<%= gd[1] %>"><%= gd[0] %></option>
						<% end %>
		      </select>

		    </div>
				<br>
				<br>
				<br>
				<div class="blankey" style="display:none;">
			    <h4>Leave this field blank to prevent spam:</h4>
			    <%= text_field_tag :blankey %>
			    <br/>
			  </div>
			</div>
	  </div>
		<div class="row">
			<div class="col-md-12">
				<div class="pull-right"><button type="submit" class="btn btn-default btn-lg fancy"> CONTINUE </button></div>
				<%= link_to "skip <i class='fa fa-arrow-right'></i>".html_safe, "#", class: "signuplink", style: "font-size:50%; position:relative; top:20px;" %>
			</div>
		</div>
	<% end %>
</section>